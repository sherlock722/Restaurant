<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_image"
        android:layout_gravity="center_horizontal"
        android:minHeight="50dp"
        android:minWidth="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/dish_title_text"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/dish_description_text"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/crustacean_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/crustacean"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/wheat_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wheat"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fish_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fish"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/egg_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/egg"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/peanut_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/peanut"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/soya_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/soya"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/milk_icon"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/milk"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dish_notes_input"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/dish_cancel_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/dish_add_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"/>
    </LinearLayout>

</LinearLayout>